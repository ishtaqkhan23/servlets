<web-app>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>

        <init-param>
            <param-name>schema</param-name>
            <param-value>mycompany</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>root</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>RegistrationDetailsServlet</servlet-name>
        <servlet-class>RegistrationDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateRegistrationServlet</servlet-name>
        <servlet-class>ValidateRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExploreProjectServlet</servlet-name>
        <servlet-class>ExploreProjectServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationDetailsServlet</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateRegistrationServlet</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExploreProjectServlet</servlet-name>
        <url-pattern>/project</url-pattern>
    </servlet-mapping>

	<welcome-file-list>  
		<welcome-file>register.html</welcome-file>  
	</welcome-file-list> 

</web-app>